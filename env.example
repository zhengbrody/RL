# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (Optional)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Agent Model Configuration
AGENT_MODEL=gpt-4

# Oura Ring API Token (Optional - if you have CSV data, not needed)
# Get your token from: https://cloud.ouraring.com/
OURA_TOKEN=your_oura_personal_access_token_here

# Apple Health (if using API)
# For manual export, no token needed
APPLE_HEALTH_EXPORT_PATH=data/raw/apple_health/export.xml

# Database Configuration
DATABASE_URL=sqlite:///data/fitness.db

# Feature Store (Feast)
FEAST_REPO_PATH=./feature_repo

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Model Serving
TORCHSERVE_MODEL_STORE=./models
TORCHSERVE_API_PORT=8080

# Security
SECRET_KEY=your-secret-key-change-in-production

# Environment
ENVIRONMENT=development

